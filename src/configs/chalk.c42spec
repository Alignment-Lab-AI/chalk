default_key_priority := 500

object key {
  user_def_ok:   false
  gen_fieldname: "keys"
  gen_typename:  "KeySpec"
  gen_setters:   false

  field required {
    type:        "bool"
    default:     false
  }
  field system {
    type:       "bool"
    default:    false
    write_lock: true
  }
  field squash {
    type:     "bool"
    default:  false
  }
  field type {
    type:      "typespec"
    require:    true
    write_lock: true
  }
  field value {
    type:     "=type"
    require:  false
  }
  field standard {
    type:       "bool"
    default:    false
    write_lock: true
  }
  field since {
    type:       "string"
    require:    false
    write_lock: true
  }
  field skip {
    type:     "bool"
    default:  false
  }
  field in_ptr {
    type:     "bool"
    default:  false
  }
  field output_order {
    type:       "int"
    default:     default_key_priority
    range:       (0, high())
    write_lock:  true
    stack_limit: 0  # Can't be provided when stacking, just on first run.
  }
  field docstring {
    type:     "string"
    require:  false
  }
  field codec {
    type:       "bool"
    default:    false
    write_lock: true
  }
}

object plugin {
  gen_fieldname: "plugins"
  gen_typename:  "PluginSpec"
  user_def_ok:   false
  gen_setters:   false

  field priority {
    type:     "int"
    default:  50
    range:    (0, high())
  }
  field ignore {
    type:    "[string]"
    default: []
  }
  field codec {
    type:       "bool"
    default:    false
    write_lock: true
  }
  field keys {
    type:       "[string]"
    require:    true
    write_lock: true
    validator:  "key_check"
  }
  field enabled {
    type:    "bool"
    default: true
  }
  field overrides {
    type:    "[string]"
    default: []
  }
  field docstring {
    type:    "string"
    require: false
  }
}

func key_check(keyname, value: [string]) {
  sects := sections("key")

  for i from 0 to len(value) {
    if value[i] == "*" {
      continue
    }
    if sects.contains(value[i]) {
      continue
    } else {
      return "'" + value[i] + "' is not a valid (specified) key."
    }
  }
  return ""
}

# TODO: should add a "choices" constraint to con4m.
func zip_check(keyname, value: [string]) {
  valid_items := ["zip", "jar", "war", "ear"]

  for i from 0 to len(value) {
    if not contains(valid_items, value[i]) {
      return "'" + value[i] + "' is not a supported zip-based file extension."
    }
  }
  return ""
}

