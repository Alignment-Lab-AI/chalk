root {
  prologue: """
# This file is auto-generated as part of the chalk build.
# Please do NOT edit it. Edit the specification file from
# which it was generated instead: src/configs/chalk.c42spec
# That will trigger a rebuild.

"""
  gen_typename: "ChalkConfig"
  gen_setters:  false
  user_def_ok:  false

  allow key    { }
  allow plugin { }
  allow sink   { }

  field config_path {
    type:       "[string]"
    default:    [".", "~/.config/chalk", "~"]
    write_lock: true
  }
  field config_filename {
    type:      "string"
    default:   "chalk.conf"
    write_lock: true
  }
  field default_command {
    type:       "string"
    require:    false
    choice:     ["help", "insert", "extract", "delete", "help",
                 "defaults", "confdump"]
    write_lock: true
  }
  field color {
    type:    "bool"
    require: false
  }
  field log_level {
    type:    "string"
    default: "warn"
    choice:  ["verbose", "trace", "info", "warn", "error", "none"]
  }
  field chalk_log_level {
    type:    "string"
    default: "warn"
    choice:  ["verbose", "trace", "info", "warn", "error", "none"]
  }
  field dry_run {
    type:    "bool"
    default: false
  }
  field zip_extensions {
    type:       "[string]"
    default:    ["zip", "jar", "war", "ear"]
    validator:  "zip_check"
  }
  field ignore_broken_conf {
    # If you use callbacks in a conf you could end up with
    # runtime errors around variables that should be there via
    # control flow, but aren't. So this isn't recommended.
    type:    "bool"
    default: false
  }
  field con4m_pinpoint {
    type:    "bool"
    default: true
  }
  field con4m_traces {
    type:    "bool"
    default: false
  }
  field cache_fd_limit {
    type:    "int"
    default: 50
    range:   (0, high())
  }
  field publish_audit {
    type:       "bool"
    default:    false
    write_lock: true
  }
  field artifact_search_path {
    type:    "[string]"
    default: ["."]
  }
  field ignore_patterns {
    type:    "[string]"
    default: [".*/**", "*.txt", "*.json"]
  }
  field recursive {
    type:    "bool"
    default: true
  }
  field can_dump {
    type:       "bool"
    default:    true
    write_lock: true
  }
  field can_load {
    type:       "bool"
    default:    true
    write_lock: true
  }
  field container_image_id {
    type:     "string"
    default:  ""
  }
  field container_image_name {
    type:     "string"
    default:  ""
  }
  field allow_external_config {
    type:       "bool"
    default:    true
    write_lock: true
  }
  field publish_defaults {
    type:       "bool"
    default:    false
    write_lock: true
  }
  field publish_unmarked {
    type:    "bool"
    default: true
  }
}
